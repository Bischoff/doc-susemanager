# For suse.com/documentation
daps --main xml/api.xml \
  --styleroot /usr/share/xml/docbook/stylesheet/suse2013 pdf

# The Rest
# ========
#
# If you are listed as a maintainer of the Devel:Galaxy:Manager:2.1
# project

# susemanager-manuals_en
daps -d DC-susemanager-all package-src --def DEF-susemanager-manuals \
  --set-date=$(date --iso)
osc -A https://api.suse.de co Devel:Galaxy:Manager:2.1 susemanager-manuals_en
cd Devel:Galaxy:Manager:2.1/susemanager-manuals_en
cp ../../build/susemanager-all/package/susemanager-all_en_src_set.tar.bz2 .
osc vc -m'Update text and image files.'
osc ci -mupdate
cd ../..

# susemanager-jsp_en
daps -d DC-susemanager-all package-src --def DEF-susemanager-manuals \
  --set-date=$(date --iso)
osc -A https://api.suse.de co Devel:Galaxy:Manager:2.1 susemanager-jsp_en
cd Devel:Galaxy:Manager:2.1/susemanager-jsp_en
cp ../../build/susemanager-all/package/susemanager-all_en_src_set.tar.bz2 .
osc vc -m'Update text and image files.'
osc ci -mupdate
cd ../..

* doc update

rm -rf SUMA-novell-doc
mkdir SUMA-novell-doc
for f in DC-susemanager-{reference,user,proxy-quick,install,client-config,all}
do
    daps -d $f online-docs --export-dir=SUMA-novell-doc
done

cp -va SUMA-novell-doc /suse/froh/Export/


